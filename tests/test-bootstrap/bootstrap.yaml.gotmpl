apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: {{ .metadata.app }}
  namespace: argocd
spec:
  project: default

  source:
    repoURL: https://github.com/argoproj/argocd-example-apps.git
    targetRevision: HEAD
    path: .

    helm:
      releaseName: app
      valueFiles: []
      values: {}

  destination:
    server: https://kubernetes.default.svc
    namespace: app

  syncPolicy:
    automated:
      prune: {{ .app.prune }}
      selfHeal: {{ .app.selfheal }}
    syncOptions:
    - CreateNamespace=true
